@using Framework.Application.Features.Authentication.Register;
@model RegisterCommand
@{
    ViewData["Title"] = "Kayıt Ol";
}


<div class="tm-contact-img-container">
</div>

<section class="tm-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">

                <section>
                    <h3 class="tm-gold-text tm-form-title">Kayıt Ol</h3>
                    <p class="tm-form-description">Aşağıda bulunan alanlara bilgilerinizi girerek kayıt olabilirsiniz.</p>


                    <form asp-action="Register" asp-controller="Account" method="post" class="tm-contact-form" enctype="multipart/form-data">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }
                        else if ((bool?)ViewBag.IsCreated != null && (bool?)ViewBag.IsCreated == true)
                        {
                            <div class="alert alert-success" role="alert">
                                Kayıt işleminiz başarılı! Admin tarafından onaylandıkdan sonra giriş yapabilirsiniz!
                            </div>
                        }

                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="Ad" required>
                            <span asp-validation-for="FirstName" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Soyad" required>
                            <span asp-validation-for="LastName" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="Email" placeholder="E-posta" required>
                            <span asp-validation-for="Email" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı" required>
                            <span asp-validation-for="UserName" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required>
                            <span asp-validation-for="Password" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <label>Profil Fotoğrafı</label>
                            <input type="file" class="form-control" id="Profile" name="Profile" placeholder="Profil Fotoğrafı" required>
                            <span name="Profile" style="color:red; font-size:13px;"></span>
                        </div>

                        <button type="submit" class="tm-btn tm-btn-success">Kayıt ol</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

