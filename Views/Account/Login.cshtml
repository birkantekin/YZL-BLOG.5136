@using Framework.Application.Features.Authentication.Login;
@model LoginCommand
@{
    ViewData["Title"] = "Giriş";
}

<div class="tm-contact-img-container">
</div>

<section class="tm-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">

                <section>
                    <h3 class="tm-gold-text tm-form-title">Giriş Yap</h3>
                    <p class="tm-form-description">Aşağıda bulunan alanlara bilgilerinizi girerek giriş yapınız.</p>


                    <form asp-action="Login" asp-controller="Account" method="post" class="tm-contact-form">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }

                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="UserNameOrEmail" placeholder="Kullanıcı adı veya e-posta" required>
                            <span asp-validation-for="UserNameOrEmail" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required>
                            <span asp-validation-for="Password" style="color:red; font-size:13px;"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                            <label class="form-check-label" for="RememberMe">@Html.DisplayNameFor(x=>x.RememberMe)</label>
                        </div>

                        <button type="submit" class="tm-btn">Giriş Yap</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

