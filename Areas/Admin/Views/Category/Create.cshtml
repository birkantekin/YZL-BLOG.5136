@using Framework.Domain.Entities;
@model Category
@{
    ViewData["Title"] = "Kategori Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tm-contact-img-container">
</div>

<section class="tm-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">

                <section>
                    <h3 class="tm-gold-text tm-form-title">Kategori Oluştur</h3>
                    <p class="tm-form-description">Aşağıda bulunan alanlara doldurarak kategori oluşturabilirsiniz.</p>


                    <form asp-action="Create" asp-controller="Category" asp-route-area="Admin" method="post" class="tm-contact-form" enctype="multipart/form-data">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }
                        else if ((bool?)ViewBag.IsCreated != null && (bool?)ViewBag.IsCreated == true)
                        {
                            <div class="alert alert-success">Başarıyla kategori oluşturuldu</div>
                        }

                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Başlık" required>
                            <span asp-validation-for="Name" style="color:red; font-size:13px;"></span>
                        </div>
                        <button type="submit" class="tm-btn tm-btn-success">Kaydet</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

