@using Framework.Domain.Entities;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = (List<Category>)ViewBag.Categories;
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />

<div class="tm-blog-img-container">
</div>

<section class="tm-section">
    <div class="container">
        <div class="row">
            <div class="tm-blog-post">
                <h3 class="tm-gold-text">Kategori Listesi</h3>
                <br />
                <br />
                <a href="@Url.Action("Create","Category",new{area="Admin"})" class="btn btn-sm btn-success">Yeni Kategori Ekle</a>
                <hr />
                <table class="table " id="datatable2">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in categories)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td><a class="btn btn-warning" href="@Url.Action("Update","Category",new{area="Admin",Id=item.Id})">Güncelle</a></td>
                                <td><a class="btn btn-danger" href="@Url.Action("Delete","Category",new{area="Admin",Id=item.Id})">Sil</a></td>
                            </tr>
                        }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#datatable2').DataTable();
        });
    </script>
}

